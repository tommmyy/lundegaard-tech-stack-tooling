{
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "no-tabs": "off",
        "quote-props": [
            "error",
            "as-needed"
        ],
        "semi": [
            "error",
            "always"
        ],
        "space-before-function-paren": [
            "error",
            "never"
        ],
        "no-console": [
            "error",
            {
                "allow": [
                    "error"
                ]
            }
        ]
    }
}